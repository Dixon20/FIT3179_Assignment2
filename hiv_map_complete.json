{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "HIV/AIDS Maps",
  "width": 800,
  "height": 400,
  "projection": {"type": "equirectangular"},
  "params": [
    {
      "name": "Year_range",
      "value": 1990,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2019,
        "step": 1,
        "name": "Year :"
      }
    },
    {
      "name": "Info_selection",
      "value": "Prevalence",
      "bind": {
        "input": "select",
        "options": ["Prevalence", "New_case", "Deaths"],
        "labels": [
          "Population living with HIV, per 100k",
          "New cases, per 100k",
          "Deaths, per 100k"
        ],
        "name": "Information : "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Dixon20/FIT3179_Assignment2/main/hiv_map_clean.csv",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Dixon20/FIT3179_Assignment2/main/hiv_map_clean.csv"
      },
      "transform": [
        {
          "lookup": "location",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Dixon20/FIT3179_Assignment2/main/ne_110m.json",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {"filter": "datum.year == Year_range"},
        {"filter": "datum.Type == Info_selection"}
      ],
      "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Value",
          "type": "quantitative",
          "title": "Estimated Value",
          "scale": {
            "type": "threshold",
            "domain": [100, 1000, 5000, 10000],
            "range": ["#fee5d9", "#fcae91", "#fb6a4a", "#cb181d"]
          }
        },
        "tooltip": [
          {"field": "location", "type": "nominal", "title": "Country"},
          {"field": "year", "type": "nominal", "title": "Year"},
          {
            "field": "Value",
            "type": "quantitative",
            "title": "Estimate",
            "format": ",.1f"
          }
        ]
      }
    }
  ],
  "config": {}
}